<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="primaryBackgroundColor">@color/colorWhite</item>
        <item name="primaryTextColor">@color/colorBlack</item>
        <item name="primaryCardBackgroundColor">@color/colorWhite</item>
        <item name="primarySettingItemBackgroundColor">@color/colorWhite</item>
        <item name="primaryEditTextColor">@color/lightGrey</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="primaryBackgroundColor">@color/colorBlack</item>
        <item name="primaryTextColor">@color/colorWhite</item>
        <item name="primaryCardBackgroundColor">@color/darkGreyCard</item>
        <item name="primarySettingItemBackgroundColor">@color/colorSettingsItem</item>
        <item name="primaryEditTextColor">@color/darkGreyCard</item>
    </style>

</resources>